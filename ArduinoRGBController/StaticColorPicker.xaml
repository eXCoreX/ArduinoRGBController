<Window x:Class="ArduinoRGBController.StaticColorPicker"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ArduinoRGBController"
        xmlns:xtk="http://schemas.xceed.com/wpf/xaml/toolkit"
        mc:Ignorable="d"
        Title="StaticColorPicker"
        SizeToContent="WidthAndHeight" ResizeMode="NoResize">
    <Grid>
        <StackPanel Orientation="Vertical" Margin="5,5,5,5">
            <xtk:ColorCanvas Margin="5,5,5,5" x:Name="colorPicker" UsingAlphaChannel="False"/>
            <Button IsDefault="True" Content="OK" FontSize="24" Margin="5,5,5,5" Click="Button_Click" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
